    <script>
      function sashimiButton() {
        let name = prompt("What is your name?");
        let sushi = prompt("Which type of sushi did you like?");
        if (sushi === "nigiri") {
          alert("Hey " + name + "! Wow, that one's my favorite too! üòã");
        } else {
          alert("That's such a great choice, " + name + "! üòç");
        }
      }

      let button = document.querySelector("button");
      button.addEventListener("click", sashimiButton);
    </script>
